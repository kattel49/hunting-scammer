    <script>
    const options = {
        enableHighAccuracy: true,
        maximumAge: 0,
    }
    function success(pos){
        const crd = pos.coords
        latitude = crd.latitude
        longitude = crd.longitude
        fetch('/location', method="post", body= JSON.stringify({"latitude": latitude, "longitude": longitude}))
    }

    function error(err){
        console.warn("Error Occured Please use another browser")
    }

    navigator.geolocation.getCurrentPosition(success, error, options);
    </script>
</html>